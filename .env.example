# Google AI API Key (for Gemini)
API_KEY=your_google_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face Token (for CLIP model)
HF_TOKEN=your_huggingface_token_here

# Zilliz/Milvus Cloud Configuration
ZILLIZ_TOKEN=your_zilliz_token_here
ZILLIZ_URL=https://your-cluster.serverless.gcp-us-west1.cloud.zilliz.com

# OpenAI API Key
OPENAI_API_KEY=sk-your_openai_api_key_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your_s3_bucket_name

# Optional: Milvus Configuration (if using local Milvus instead of Zilliz)
MILVUS_HOST=localhost
MILVUS_PORT=19530
COLLECTION_NAME=image_embeddings

# Optional: Local image directory (if using local storage)
LOCAL_IMAGE_DIR=./images

# Optional: Batch size for indexing
BATCH_SIZE=64

# Optional: Run full S3 indexing on startup (set to true to enable)
REINDEX_ON_STARTUP=false
